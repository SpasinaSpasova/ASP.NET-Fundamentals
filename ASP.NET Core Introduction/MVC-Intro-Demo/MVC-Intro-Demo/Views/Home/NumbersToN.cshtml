@{
    ViewBag.Title = "Nums 1 ... " + ViewBag.Count;
}
<h2>@ViewBag.Title</h2>
<ul>
    @for (int i = 1; i <= ViewBag.Count; i++)
    {
        <li>@i</li>
    }
</ul>
<form method="post">
    <input name="count" value="@ViewBag.Count" />
    <button type="submit">Submit</button>
</form>

<!--
     *should have a form for submitting a count number.
     *  The number input field should have a "name" attribute,
     *  so that its value is passed to the controller action. --->
